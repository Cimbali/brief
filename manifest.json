{
    "name": "Brief",
    "version": "2.4.0b1+git",
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "brief@mozdev.org",
            "strict_min_version": "57.0"
        }
    },
    "default_locale": "en",
    "permissions": ["<all_urls>", "contextMenus", "bookmarks", "storage", "unlimitedStorage"],
    "background": {
        "scripts": ["/scripts/utils.js", "/scripts/prefs.js", "/scripts/database.js", "background.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/brief-icon-16.png",
            "32": "icons/brief-icon-32.png",
            "64": "icons/brief-icon-64.png"
        },
        "default_title": "Brief"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+D"
            }
        }
    }
}
